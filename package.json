{
    "name": "npm-static-site-generator",
    "version": "0.0.1",
    "description": "NPM Static Site Generator",
    "author": "Pim Brouwers",
    "license": "MIT",
    "dependencies": {
        "jquery": "2.2.0",
        "knockout": "3.4.1",
        "requirejs":"latest",
        "requirejs-text": "latest"
    },
    "devDependencies": {
        "handlebars": "latest",
        "less": "latest",
        "less-watch-compiler": "latest",
        "ncp": "latest",
        "rimraf": "latest"
    },
    "scripts": {
        "clean": "rimraf www_dist/*",

        "devlib:requirejs": "mkdir www_src/lib && ncp node_modules/requirejs/require.js www_src/lib/require.js",
        
        "watch:less": "less-watch-compiler www_src/less www_src/css/app.css",

        "build:js": "node node_modules/requirejs/bin/r.js -o www_src/js/require.build.js",
        "build:less": "lessc www_src/less/app.less www_dist/css/app.css",

        "build": "npm run clean && npm run devlib:js && npm run build:js & npm run build:less"
    }
}
