{
    "name": "npm-static-site-generator",
    "version": "0.0.1",
    "description": "NPM Static Site Generator",
    "author": "Pim Brouwers",
    "license": "MIT",
    "dependencies": {
        "jquery": "2.2.0",
        "knockout": "3.4.1",
        "requirejs":"latest",
        "requirejs-text": "latest"
    },
    "devDependencies": {
        "handlebars": "latest",
        "less": "latest",
        "less-watch-compiler": "latest",
        "ncp": "latest",
        "rimraf": "latest"
    },
    "scripts": {
        "clean": "rimraf www_dist/*",

        "devlib:js": "ncp node_modules/requirejs/require.js www_src/require.js && ncp node_modules/knockout/build/output/knockout-latest.js www_src/knockout.js && ncp node_modules/jquery/dist/jquery.min.js www_src/jquery.js",
        
        "watch:less": "less-watch-compiler www_src/less www_src/css",
        "build:less": "lessc www_src/less/app.less www_dist/css/app.css",       

        "build:js": "node node_modules/requirejs/bin/r.js -o www_src/js/require.build.js",
        
        "build:pages": "node tools/build-pages.js",

        "build": "npm run clean && npm run build:pages & npm run build:js & npm run build:less"
    }
}
